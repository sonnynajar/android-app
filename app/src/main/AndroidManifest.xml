<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sonnynajar.beveragepong"
    android:installLocation="preferExternal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ChooseGameActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TwoNamesActivity"
            android:parentActivityName=".ChooseGameActivity" />
        <activity
            android:name=".FourNamesActivity"
            android:parentActivityName=".ChooseGameActivity" />
        <activity android:name=".FourGameActivity"></activity>
        <activity android:name=".TwoGameActivity"></activity>
    </application>

</manifest>